@using Infrastructure.ViewModels
@model TransactionCreateVM





<form asp-action="TransactionCreate" asp-controller="Transaction" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Transaction Name</label>
        <input  class="form-control"  aria-describedby="emailHelp" placeholder="Enter Transaction" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Transaction TotalPrice</label>
        <input class="form-control" aria-describedby="emailHelp" placeholder="Enter Transaction" asp-for="TotalPrice">
        <span asp-validation-for="TotalPrice"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Transaction Date</label>
        <input class="form-control" aria-describedby="emailHelp" placeholder="Enter Transaction" asp-for="TransactionDate">
        <span asp-validation-for="TransactionDate"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Transaction Date</label>
        <select class="form-control" asp-for="SupplierId">
            <option value="">Select Supliper</option>
            @if(Model.Suppliers != null && Model.Suppliers.Count() >0)
            {
                foreach(var item in Model.Suppliers)
                {
                    <option value="@item.SupplierId">@item.SupplierName</option>
                }
            }
        </select>
        <span asp-validation-for="SupplierId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>